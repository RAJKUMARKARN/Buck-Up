{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",

    "esModuleInterop": true,
    "isolatedModules": true,
    
    "strict": false,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
